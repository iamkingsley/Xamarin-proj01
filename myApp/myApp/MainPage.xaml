<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:myApp"
             x:Class="myApp.MainPage">

  <TableView Intent="Form">
    <TableRoot>
      <TableSection>
        <EntryCell Label="First Name" x:Name="FirstName"></EntryCell>
        <EntryCell Label="Last Name" x:Name="LastName"></EntryCell>
        <EntryCell IsPassword="True" Label="Password"></EntryCell>
        <EntryCell Keyboard="Telephone" Label="Phone"></EntryCell>
      </TableSection>
    </TableRoot>
  </TableView>

</ContentPage>